@model List<IGB.Web.ViewModels.AnnouncementListItemViewModel>
@{
    ViewData["Title"] = "Manage Announcements";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Manage Announcements",
    Subtitle: "Create and publish announcements for users."
))

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Announcement
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Audience</th>
                <th>Publish</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td class="fw-semibold">@a.Title</td>
                    <td>@a.Audience</td>
                    <td>@a.PublishAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <span class="badge @(a.IsPublished ? "bg-success" : "bg-secondary")">
                            @(a.IsPublished ? "Published" : "Draft")
                        </span>
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@a.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this announcement?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


