@model IGB.Web.ViewModels.PendingUsersViewModel
@{
    ViewData["Title"] = "Pending Approvals";
    var q = Model.Query ?? "";
    var currentPage = Model.Pagination.Page;
    var pageSize = Model.Pagination.PageSize;
    
    var search = new PageHeaderSearch(
        Placeholder: "Name / email / role",
        QueryParamName: "q",
        CurrentValue: q,
        FormAction: Url.Action("Index", "Approvals"),
        FormMethod: "get",
        ShowClearButton: !string.IsNullOrWhiteSpace(q),
        ClearButtonUrl: Url.Action("Index", "Approvals", new { page = 1, pageSize })
    );
    
    var filters = new List<PageHeaderFilter>
    {
        new("Show", "pageSize", "select", pageSize.ToString(),
            new Dictionary<string, string>
            {
                { "10", "10" },
                { "25", "25" },
                { "50", "50" },
                { "100", "100" }
            })
    };
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Pending User Approvals",
    Icon: "fas fa-user-clock",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index", "Home")),
        new("Pending Approvals")
    },
    Search: search,
    Filters: filters
))

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Phone</th>
                        <th>Created</th>
                        <th style="width: 280px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.Users.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No pending users.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var u in Model.Users)
                        {
                            <tr>
                                <td>@u.Email</td>
                                <td>@u.FullName</td>
                                <td><span class="badge bg-secondary">@u.Role</span></td>
                                <td>@(u.PhoneNumber ?? "-")</td>
                                <td>@u.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <form asp-action="Approve" method="post" class="d-flex gap-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <input type="hidden" name="q" value="@q" />
                                            <input type="hidden" name="page" value="@currentPage" />
                                            <input type="hidden" name="pageSize" value="@pageSize" />
                                            <input type="text" name="note" class="form-control form-control-sm" placeholder="Note (optional)" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check me-1"></i>Approve
                                            </button>
                                        </form>

                                        <form asp-action="Reject" method="post" class="d-flex gap-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <input type="hidden" name="q" value="@q" />
                                            <input type="hidden" name="page" value="@currentPage" />
                                            <input type="hidden" name="pageSize" value="@pageSize" />
                                            <input type="hidden" name="note" value="Rejected by admin" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-times me-1"></i>Reject
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>

            <partial name="Components/_Pagination" model="Model.Pagination" />
        </div>
    </div>
</div>


