@model IGB.Domain.Entities.Grade
@{
    ViewData["Title"] = "Edit Grade";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Edit Grade",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index", "Home")),
        new("Courses"),
        new("Grades", Url.Action("Index", "Grades", new { curriculumId = Model.CurriculumId })),
        new("Edit")
    }
))

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CurriculumId" />

                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Order (Level)</label>
                            <input asp-for="Level" class="form-control" type="number" />
                        </div>
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>

                <div class="mt-3 d-flex justify-content-end gap-2">
                    <a asp-action="Index" asp-route-curriculumId="@Model.CurriculumId" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }


