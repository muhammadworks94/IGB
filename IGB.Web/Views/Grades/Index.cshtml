@model IGB.Web.ViewModels.Admin.GradeListViewModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Grades";
    var csrf = Antiforgery.GetAndStoreTokens(Context).RequestToken;
    
    var actionButtons = new List<PageHeaderActionButton>
    {
        new("Add Grade", Url.Action("Create", "Grades", new { curriculumId = Model.CurriculumId }), Icon: "fas fa-plus me-2", ButtonType: "outline-primary")
    };
    
    var search = new PageHeaderSearch(
        Placeholder: "Search by name...",
        QueryParamName: "q",
        CurrentValue: Model.Query,
        FormAction: Url.Action("Index", "Grades", new { curriculumId = Model.CurriculumId }),
        FormMethod: "get",
        ShowClearButton: true,
        ClearButtonUrl: Url.Action("Index", "Grades", new { curriculumId = Model.CurriculumId })
    );
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: $"Grades - {Model.CurriculumName}",
    Icon: "fas fa-graduation-cap",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index", "Home")),
        new("Courses"),
        new("Grades")
    },
    Search: search,
    ActionButtons: actionButtons
))

<div class="container-fluid">
    @if (TempData["Error"] != null)
    {
        <partial name="Components/_Alert" model="@(new IGB.Web.ViewModels.Components.AlertViewModel(TempData["Error"]!.ToString()!, Variant: "danger", Dismissible: true))" />
    }
    @if (TempData["Success"] != null)
    {
        <partial name="Components/_Alert" model="@(new IGB.Web.ViewModels.Components.AlertViewModel(TempData["Success"]!.ToString()!, Variant: "success", Dismissible: true))" />
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Order</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var g in Model.Items)
                    {
                        var statusBadge = g.IsActive ? "<span class='badge bg-success'>Active</span>" : "<span class='badge bg-secondary'>Inactive</span>";
                        var coursesUrl = Url.Action("All", "Courses", new { gradeId = g.Id }) ?? "#";
                        var editUrl = Url.Action("Edit", "Grades", new { id = g.Id }) ?? "#";
                        var delUrl = Url.Action("Delete", "Grades", new { id = g.Id }) ?? "#";

                        <tr>
                            <td>@g.Name</td>
                            <td>@(g.Level?.ToString() ?? "-")</td>
                            <td>@Html.Raw(statusBadge)</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" href="@coursesUrl"><i class="fas fa-book me-1"></i>Courses</a>
                                <a class="btn btn-sm btn-outline-secondary" href="@editUrl"><i class="fas fa-edit me-1"></i>Edit</a>
                                <form method="post" action="@delUrl" class="d-inline" onsubmit="return confirm('Delete grade? Use cascade if it has courses.');">
                                    <input type="hidden" name="cascade" value="false" />
                                    <input name="__RequestVerificationToken" type="hidden" value="@csrf" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash me-1"></i>Delete</button>
                                </form>
                                <form method="post" action="@delUrl" class="d-inline" onsubmit="return confirm('Cascade delete grade + courses + topics?');">
                                    <input type="hidden" name="cascade" value="true" />
                                    <input name="__RequestVerificationToken" type="hidden" value="@csrf" />
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-bomb me-1"></i>Delete (cascade)</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

            @if (Model.Pagination != null)
            {
                <partial name="Components/_Pagination" model="Model.Pagination" />
            }
        </div>
    </div>
</div>


