@model IGB.Web.ViewModels.Reports.MissingClassesViewModel
@{
    ViewData["Title"] = "Missing Classes";
}

<div class="breadcrumb-header">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-2">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Reports</a></li>
            <li class="breadcrumb-item active" aria-current="page">Missing Classes</li>
        </ol>
    </nav>
    
    <!-- Title, Filters, and Action Buttons in one row -->
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mb-0">
        <h1 class="breadcrumb-title mb-0">Missing Classes</h1>
        
        <div class="d-flex gap-2 align-items-center flex-wrap">
            <form method="get" id="missingClassesFilterForm" class="d-flex gap-2 align-items-center">
                <div style="width: 150px;">
                    <input class="form-control form-control-sm" name="from" type="date" value="@(Model.From?.ToString("yyyy-MM-dd") ?? "")" placeholder="From" />
                </div>
                <div style="width: 150px;">
                    <input class="form-control form-control-sm" name="to" type="date" value="@(Model.To?.ToString("yyyy-MM-dd") ?? "")" placeholder="To" />
                </div>
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="fas fa-filter me-1"></i>Filter
                </button>
                <a class="btn btn-outline-secondary btn-sm" id="exportCsvLink" href="@Url.Action("MissingClassesExportCsv","Reports", new { from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd") })">
                    <i class="fas fa-file-csv me-1"></i>Export CSV
                </a>
                <a class="btn btn-outline-secondary btn-sm" target="_blank" id="exportPdfLink" href="@Url.Action("MissingClassesExportPdf","Reports", new { from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd") })">
                    <i class="fas fa-file-pdf me-1"></i>PDF
                </a>
            </form>
        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Lesson</th>
                        <th>Course</th>
                        <th>Student</th>
                        <th>Tutor</th>
                        <th>When (UTC)</th>
                        <th>Student</th>
                        <th>Tutor</th>
                        <th>Note</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var r in Model.Rows)
                    {
                        <tr>
                            <td class="text-muted">#@r.LessonId</td>
                            <td>@r.CourseName</td>
                            <td>@r.StudentName</td>
                            <td>@r.TutorName</td>
                            <td class="text-muted">@r.ScheduledStartUtc.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="fw-semibold @(r.StudentAttended ? "text-success" : "text-danger")">@(r.StudentAttended ? "Attended" : "Missed")</td>
                            <td class="fw-semibold @(r.TutorAttended ? "text-success" : "text-danger")">@(r.TutorAttended ? "Attended" : "Missed")</td>
                            <td class="text-muted">@r.Note</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('missingClassesFilterForm');
        if (form) {
            form.addEventListener('change', function() {
                const from = form.querySelector('[name="from"]')?.value || '';
                const to = form.querySelector('[name="to"]')?.value || '';
                
                const csvLink = document.getElementById('exportCsvLink');
                const pdfLink = document.getElementById('exportPdfLink');
                
                if (csvLink) {
                    csvLink.href = '@Url.Action("MissingClassesExportCsv","Reports")' + 
                        '?from=' + encodeURIComponent(from) + 
                        '&to=' + encodeURIComponent(to);
                }
                if (pdfLink) {
                    pdfLink.href = '@Url.Action("MissingClassesExportPdf","Reports")' + 
                        '?from=' + encodeURIComponent(from) + 
                        '&to=' + encodeURIComponent(to);
                }
            });
        }
    });
</script>
