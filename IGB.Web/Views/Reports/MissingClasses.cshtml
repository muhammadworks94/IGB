@model IGB.Web.ViewModels.Reports.MissingClassesViewModel
@{
    ViewData["Title"] = "Missing Classes";
    
    // Build filters
    var filters = new List<PageHeaderFilter>
    {
        new("From", "from", "date", Model.From?.ToString("yyyy-MM-dd") ?? "", null, "From date"),
        new("To", "to", "date", Model.To?.ToString("yyyy-MM-dd") ?? "", null, "To date")
    };
    
    // Build action buttons
    var hasActiveFilters = Model.From.HasValue || Model.To.HasValue;
    var actionButtons = new List<PageHeaderActionButton>
    {
        new("Export CSV", Url.Action("MissingClassesExportCsv", "Reports", new { from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd") }), Icon: "fas fa-file-csv me-1", ButtonType: "outline-secondary"),
        new("PDF", Url.Action("MissingClassesExportPdf", "Reports", new { from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd") }), Icon: "fas fa-file-pdf me-1", ButtonType: "outline-secondary")
    };
    
    if (hasActiveFilters)
    {
        actionButtons.Add(new PageHeaderActionButton(
            "Reset",
            Url.Action("MissingClasses", "Reports"),
            Icon: "fas fa-rotate-left me-1",
            ButtonType: "outline-secondary"
        ));
    }
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Missing Classes",
    Icon: "fas fa-exclamation-triangle",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index", "Home")),
        new("Reports"),
        new("Missing Classes")
    },
    Filters: filters,
    ActionButtons: actionButtons
))

<div class="container-fluid">

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Lesson</th>
                        <th>Course</th>
                        <th>Student</th>
                        <th>Tutor</th>
                        <th>When (UTC)</th>
                        <th>Student</th>
                        <th>Tutor</th>
                        <th>Note</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var r in Model.Rows)
                    {
                        <tr>
                            <td class="text-muted">#@r.LessonId</td>
                            <td>@r.CourseName</td>
                            <td>@r.StudentName</td>
                            <td>@r.TutorName</td>
                            <td class="text-muted">@r.ScheduledStartUtc.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="fw-semibold @(r.StudentAttended ? "text-success" : "text-danger")">@(r.StudentAttended ? "Attended" : "Missed")</td>
                            <td class="fw-semibold @(r.TutorAttended ? "text-success" : "text-danger")">@(r.TutorAttended ? "Attended" : "Missed")</td>
                            <td class="text-muted">@r.Note</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.Pagination.TotalCount > 0)
    {
        <partial name="Components/_Pagination" model="Model.Pagination" />
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Update export button URLs based on current date filter values
        const updateExportUrls = function() {
            const fromInput = document.querySelector('input[name="from"]');
            const toInput = document.querySelector('input[name="to"]');
            const from = fromInput?.value || '';
            const to = toInput?.value || '';
            
            // Find export buttons by their href pattern
            const exportButtons = document.querySelectorAll('a[href*="MissingClassesExport"]');
            exportButtons.forEach(function(btn) {
                let baseUrl = btn.getAttribute('data-base-url');
                if (!baseUrl) {
                    // Extract base URL from current href
                    baseUrl = btn.href.split('?')[0];
                    btn.setAttribute('data-base-url', baseUrl);
                }
                const params = [];
                if (from) params.push('from=' + encodeURIComponent(from));
                if (to) params.push('to=' + encodeURIComponent(to));
                btn.href = baseUrl + (params.length > 0 ? '?' + params.join('&') : '');
            });
        };
        
        // Watch for date input changes to update export URLs in real-time
        const fromInput = document.querySelector('input[name="from"]');
        const toInput = document.querySelector('input[name="to"]');
        
        if (fromInput) {
            fromInput.addEventListener('change', updateExportUrls);
        }
        if (toInput) {
            toInput.addEventListener('change', updateExportUrls);
        }
        
        // Also update when the form is submitted (before submit)
        const dateFiltersForm = document.getElementById('dateFiltersForm');
        if (dateFiltersForm) {
            dateFiltersForm.addEventListener('submit', function() {
                // Update URLs before form submits
                updateExportUrls();
            });
        }
        
        // Initial update on page load
        updateExportUrls();
    });
</script>

