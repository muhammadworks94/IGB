@model IGB.Web.ViewModels.Reports.AttendanceLogsViewModel
@{
    ViewData["Title"] = "Attendance Logs";
    
    var search = new PageHeaderSearch(
        Placeholder: "Search...",
        QueryParamName: "q",
        CurrentValue: Model.Query,
        FormAction: Url.Action("AttendanceLogs", "Reports"),
        FormMethod: "get",
        ShowClearButton: true,
        ClearButtonUrl: Url.Action("AttendanceLogs", "Reports", new { from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd") })
    );
    
    // Build filters
    var filters = new List<PageHeaderFilter>
    {
        new("From", "from", "date", Model.From?.ToString("yyyy-MM-dd") ?? "", null, "From date"),
        new("To", "to", "date", Model.To?.ToString("yyyy-MM-dd") ?? "", null, "To date")
    };
    
    // Build action buttons
    var hasActiveFilters = Model.From.HasValue || Model.To.HasValue || !string.IsNullOrWhiteSpace(Model.Query);
    var actionButtons = new List<PageHeaderActionButton>
    {
        new("Export CSV", Url.Action("AttendanceLogsExportCsv", "Reports", new { q = Model.Query, from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd") }), Icon: "fas fa-file-csv me-1", ButtonType: "outline-secondary"),
        new("PDF", Url.Action("AttendanceLogsExportPdf", "Reports", new { q = Model.Query, from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd") }), Icon: "fas fa-file-pdf me-1", ButtonType: "outline-secondary")
    };
    
    if (hasActiveFilters)
    {
        actionButtons.Add(new PageHeaderActionButton(
            "Reset",
            Url.Action("AttendanceLogs", "Reports"),
            Icon: "fas fa-rotate-left me-1",
            ButtonType: "outline-secondary"
        ));
    }
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Attendance Logs",
    Icon: "fas fa-clipboard-list",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index", "Home")),
        new("Reports"),
        new("Attendance Logs")
    },
    Search: search,
    Filters: filters,
    ActionButtons: actionButtons
))

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Lesson</th>
                        <th>Course</th>
                        <th>Student</th>
                        <th>Tutor</th>
                        <th>Scheduled (UTC)</th>
                        <th>Session (UTC)</th>
                        <th>Join times (UTC)</th>
                        <th>Attendance</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var r in Model.Rows)
                    {
                        var dur = (r.SessionStartedAtUtc.HasValue && r.SessionEndedAtUtc.HasValue)
                            ? (r.SessionEndedAtUtc.Value - r.SessionStartedAtUtc.Value).TotalMinutes.ToString("F0") + " min"
                            : "—";
                        <tr>
                            <td class="text-muted">#@r.LessonId</td>
                            <td>@r.CourseName</td>
                            <td>@r.StudentName</td>
                            <td>@r.TutorName</td>
                            <td class="text-muted">@r.ScheduledStartUtc.ToString("yyyy-MM-dd HH:mm") - @r.ScheduledEndUtc.ToString("HH:mm")</td>
                            <td class="text-muted">
                                @(r.SessionStartedAtUtc?.ToString("yyyy-MM-dd HH:mm") ?? "—")
                                -
                                @(r.SessionEndedAtUtc?.ToString("HH:mm") ?? "—")
                                <div class="text-muted small">@dur</div>
                            </td>
                            <td class="text-muted small">
                                Student: @(r.StudentJoinedAtUtc?.ToString("HH:mm") ?? "—")<br/>
                                Tutor: @(r.TutorJoinedAtUtc?.ToString("HH:mm") ?? "—")
                            </td>
                            <td>
                                <span class="badge @(r.StudentAttended ? "bg-success" : "bg-danger")">S</span>
                                <span class="badge @(r.TutorAttended ? "bg-success" : "bg-danger")">T</span>
                            </td>
                            <td class="text-muted">@r.Status</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

            <partial name="Components/_Pagination" model="Model.Pagination" />
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Update export button URLs based on current filter values
        const updateExportUrls = function() {
            const searchInput = document.querySelector('input[name="q"]');
            const fromInput = document.querySelector('input[name="from"]');
            const toInput = document.querySelector('input[name="to"]');
            const q = searchInput?.value || '';
            const from = fromInput?.value || '';
            const to = toInput?.value || '';
            
            // Find export buttons by their href pattern
            const exportButtons = document.querySelectorAll('a[href*="AttendanceLogsExport"]');
            exportButtons.forEach(function(btn) {
                let baseUrl = btn.getAttribute('data-base-url');
                if (!baseUrl) {
                    // Extract base URL from current href
                    baseUrl = btn.href.split('?')[0];
                    btn.setAttribute('data-base-url', baseUrl);
                }
                const params = [];
                if (q) params.push('q=' + encodeURIComponent(q));
                if (from) params.push('from=' + encodeURIComponent(from));
                if (to) params.push('to=' + encodeURIComponent(to));
                btn.href = baseUrl + (params.length > 0 ? '?' + params.join('&') : '');
            });
        };
        
        // Watch for search input changes
        const searchInput = document.querySelector('input[name="q"]');
        if (searchInput) {
            searchInput.addEventListener('input', updateExportUrls);
        }
        
        // Watch for date input changes to update export URLs in real-time
        const fromInput = document.querySelector('input[name="from"]');
        const toInput = document.querySelector('input[name="to"]');
        
        if (fromInput) {
            fromInput.addEventListener('change', updateExportUrls);
        }
        if (toInput) {
            toInput.addEventListener('change', updateExportUrls);
        }
        
        // Also update when the date filter form is submitted
        const dateFiltersForm = document.getElementById('dateFiltersForm');
        if (dateFiltersForm) {
            dateFiltersForm.addEventListener('submit', function() {
                // Update URLs before form submits
                updateExportUrls();
            });
        }
        
        // Initial update on page load
        updateExportUrls();
    });
</script>

