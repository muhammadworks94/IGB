@{
    Layout = "_PublicLayout";
}

<section class="igb-hero">
    <div class="container-xl">
        <div class="row align-items-center g-4">
            <div class="col-12 col-lg-6">
                <div class="igb-hero-badge">
                    <span class="igb-dot"></span>
                    Trusted learning. Real progress.
                </div>
                <h1 class="igb-hero-title">
                    Learn smarter with expert tutors, structured programs, and measurable outcomes.
                </h1>
                <p class="igb-hero-sub">
                    IGB helps students stay consistent with personalized guidance, modern scheduling, and transparent performance tracking.
                </p>
                <div class="d-flex gap-2 flex-wrap">
                    <a class="btn btn-primary igb-btn-primary btn-lg" href="/Account/Register">Get Started</a>
                    <a class="btn btn-outline-primary igb-btn-ghost btn-lg" href="/about-us">Learn More</a>
                </div>
                <div class="igb-hero-proof mt-4">
                    <div class="igb-proof-item">
                        <div class="igb-proof-value">1:1</div>
                        <div class="igb-proof-label">Personalized teaching</div>
                    </div>
                    <div class="igb-proof-item">
                        <div class="igb-proof-value">24/7</div>
                        <div class="igb-proof-label">Flexible scheduling</div>
                    </div>
                    <div class="igb-proof-item">
                        <div class="igb-proof-value">Data</div>
                        <div class="igb-proof-label">Progress insights</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="igb-hero-card">
                    <div class="igb-hero-card-header">
                        <div class="igb-hero-card-icon"><i class="fas fa-chart-line"></i></div>
                        <div>
                            <div class="igb-hero-card-title">Track improvement</div>
                            <div class="igb-hero-card-sub">Attendance, tests, and milestones in one place.</div>
                        </div>
                    </div>
                    <div class="igb-hero-mock">
                        <div class="igb-mock-row">
                            <div class="igb-mock-pill">Today</div>
                            <div class="igb-mock-pill igb-mock-pill-muted">This Week</div>
                            <div class="igb-mock-pill igb-mock-pill-muted">Reports</div>
                        </div>
                        <div class="igb-mock-card">
                            <div class="igb-mock-card-title">Mathematics • Lesson 12</div>
                            <div class="igb-mock-card-sub">Starts in 25 mins • Zoom ready</div>
                            <div class="igb-mock-progress"><span style="width:72%"></span></div>
                        </div>
                        <div class="igb-mock-card igb-mock-card-muted">
                            <div class="igb-mock-card-title">English • Test Report</div>
                            <div class="igb-mock-card-sub">A- • 84% • Areas to improve: Writing</div>
                            <div class="igb-mock-progress"><span style="width:84%"></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

