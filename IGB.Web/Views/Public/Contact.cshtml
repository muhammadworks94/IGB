@{
    Layout = "_PublicLayout";
}

<section class="igb-section">
    <div class="container-xl">
        <h1 class="igb-page-title">Contact Us</h1>
        <p class="igb-page-sub text-muted">Tell us what you’re looking for and we’ll help you choose the right program.</p>

        <div class="row g-3 mt-2">
            <div class="col-12 col-lg-7">
                <div class="card">
                    <div class="card-body">
                        <form>
                            <div class="row g-2">
                                <div class="col-12 col-md-6">
                                    <label class="form-label">Full name</label>
                                    <input class="form-control" placeholder="Your name" />
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label">Email</label>
                                    <input class="form-control" type="email" placeholder="you@example.com" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Message</label>
                                    <textarea class="form-control" rows="4" placeholder="How can we help?"></textarea>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-primary igb-btn-primary" type="button" disabled>
                                    Submit (wire-up next)
                                </button>
                            </div>
                            <div class="text-muted small mt-2">This is a UI stub; we can connect it to email/CRM next.</div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-5">
                <div class="card">
                    <div class="card-body">
                        <div class="fw-semibold mb-1">Contact</div>
                        <div class="text-muted small">Email: support@example.com</div>
                        <div class="text-muted small">Hours: Mon–Fri, 9am–6pm</div>
                        <hr />
                        <div class="fw-semibold mb-1">Quick links</div>
                        <div class="d-flex flex-column gap-2">
                            <a class="text-decoration-none" href="/Account/Login">Login</a>
                            <a class="text-decoration-none" href="/Account/Register">Get Started</a>
                            <a class="text-decoration-none" href="/courses">Browse courses</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


