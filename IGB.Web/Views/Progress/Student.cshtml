@model IGB.Web.ViewModels.Progress.TutorStudentProgressViewModel
@{
    ViewData["Title"] = "Student Progress";
    string risk(int p) => p >= 70 ? "text-success" : (p >= 40 ? "text-warning" : "text-danger");
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Progress",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index", "Home")),
        new("Students", Url.Action("Students", "Progress")),
        new(Model.StudentName),
        new("Progress")
    },
    Subtitle: $"Overall: {Model.OverallPercent}% ({Model.CompletedTopics}/{Model.TotalTopics} topics)"
))

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <partial name="Components/_Alert" model="@(new IGB.Web.ViewModels.Components.AlertViewModel(TempData["Success"]!.ToString()!, Variant: "success", Dismissible: true))" />
    }
    @if (TempData["Error"] != null)
    {
        <partial name="Components/_Alert" model="@(new IGB.Web.ViewModels.Components.AlertViewModel(TempData["Error"]!.ToString()!, Variant: "danger", Dismissible: true))" />
    }

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="mb-3">Courses</h5>

                    @foreach (var c in Model.Courses)
                    {
                        <div class="border rounded p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="fw-semibold">@c.CourseName</div>
                                <div class="@risk(c.Percent) fw-semibold">@c.Percent%</div>
                            </div>
                            <div class="text-muted small">@c.CompletedTopics / @c.TotalTopics topics</div>
                            <div class="progress mt-2" style="height:10px;">
                                <div class="progress-bar @(c.Percent >= 70 ? "bg-success" : (c.Percent >= 40 ? "bg-warning" : "bg-danger"))" style="width:@c.Percent%"></div>
                            </div>

                            <div class="mt-3">
                                <div class="text-muted small mb-2">Topic-wise completion</div>
                                <div class="row g-2">
                                    @foreach (var t in c.Topics)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between border rounded px-2 py-1">
                                                <span>@t.Title</span>
                                                <span class="text-muted small">@(t.Covered ? "Done" : "—")</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="mt-3">
                                <form method="post" action="@Url.Action("AddNote","Progress")">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="StudentUserId" value="@Model.StudentUserId" />
                                    <input type="hidden" name="CourseId" value="@c.CourseId" />
                                    <div class="input-group">
                                        <input class="form-control" name="Note" placeholder="Add a progress note for this course..." />
                                        <button class="btn btn-outline-primary" type="submit">Add Note</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="mb-3">Attendance</h5>
                    <div class="list-group">
                        @foreach (var a in Model.Attendance.Take(10))
                        {
                            <div class="list-group-item">
                                <div class="fw-semibold">@a.CourseName</div>
                                <div class="text-muted small">@a.WhenUtc.ToString("yyyy-MM-dd HH:mm") (UTC) • @a.Status</div>
                                <div class="text-muted small">Student: @(a.StudentAttended ? "Yes" : "No") • Tutor: @(a.TutorAttended ? "Yes" : "No")</div>
                                @if (a.CanMarkTopics)
                                {
                                    <a class="btn btn-sm btn-outline-secondary mt-2" href="@Url.Action("MarkTopics","Progress", new { lessonId = a.LessonId })">Mark topics</a>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="mb-3">Notes</h5>
                    @if (Model.Notes.Count == 0)
                    {
                        <div class="text-muted">No notes yet.</div>
                    }
                    else
                    {
                        <ul class="mb-0">
                            @foreach (var n in Model.Notes)
                            {
                                <li class="mb-2">
                                    <div class="text-muted small">@n.CreatedAtUtc.ToString("yyyy-MM-dd") • @n.CourseName • @n.TutorName</div>
                                    <div>@n.Note</div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="mb-3">Feedback history</h5>
                    @if (Model.FeedbackHistory.Count == 0)
                    {
                        <div class="text-muted">No feedback yet.</div>
                    }
                    else
                    {
                        <ul class="mb-0">
                            @foreach (var f in Model.FeedbackHistory)
                            {
                                <li class="mb-2">
                                    <div class="text-muted small">@f.CreatedAtUtc.ToString("yyyy-MM-dd") • @f.CourseName • @f.TutorName • @f.Rating/5</div>
                                    @if (!string.IsNullOrWhiteSpace(f.Comments))
                                    {
                                        <div class="text-muted">@f.Comments</div>
                                    }
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


