@model IGB.Application.DTOs.DashboardSummaryDto
@using System.Text.Json
@{
    ViewData["Title"] = "Dashboard";
    var isSuperAdmin = User.IsInRole("SuperAdmin");
    var activeUsersApprox = Model.ActiveStudents + Model.ActiveTutors; // admins not tracked as active/inactive in DTO
    var inactiveUsersApprox = Math.Max(Model.TotalUsers - activeUsersApprox, 0);
}

<!-- Breadcrumb Header -->
<div class="breadcrumb-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item active" aria-current="page">Home</li>
        </ol>
    </nav>
    <h1 class="breadcrumb-title">Dashboard</h1>
    <p class="breadcrumb-subtitle">Welcome to your IGB System Dashboard - Manage your educational platform efficiently</p>

    @if (User.IsInRole("SuperAdmin"))
    {
        <form asp-action="SendTestNotification" method="post" class="mt-2">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-bell me-2"></i>Send Test Notification (SignalR)
            </button>
        </form>
    }
</div>

<div class="container-fluid @(isSuperAdmin ? "admin-dashboard-container" : "")">
    
    <!-- Flash Messages Section -->
    <div id="divFlashMessage">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    @if (isSuperAdmin)
    {
        <!-- SuperAdmin KPI Cards -->
        <div class="overview-stats-section">
            <div class="row g-3">
                <div class="col-xl-3 col-md-6">
                    <div class="kpi-tile kpi-tile-blue">
                        <div class="kpi-icon"><i class="fas fa-users"></i></div>
                        <div class="kpi-body">
                            <div class="kpi-value">@Model.TotalUsers</div>
                            <div class="kpi-label">Total Users</div>
                            <div class="kpi-sub">Approx. active: <strong>@activeUsersApprox</strong></div>
                            <div class="kpi-accent"></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="kpi-tile kpi-tile-green">
                        <div class="kpi-icon"><i class="fas fa-user-graduate"></i></div>
                        <div class="kpi-body">
                            <div class="kpi-value">@Model.StudentsCount</div>
                            <div class="kpi-label">Students</div>
                            <div class="kpi-sub">Active: <strong>@Model.ActiveStudents</strong></div>
                            <div class="kpi-accent"></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="kpi-tile kpi-tile-amber">
                        <div class="kpi-icon"><i class="fas fa-chalkboard-teacher"></i></div>
                        <div class="kpi-body">
                            <div class="kpi-value">@Model.TutorsCount</div>
                            <div class="kpi-label">Teachers</div>
                            <div class="kpi-sub">Active: <strong>@Model.ActiveTutors</strong></div>
                            <div class="kpi-accent"></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="kpi-tile kpi-tile-red">
                        <div class="kpi-icon"><i class="fas fa-book"></i></div>
                        <div class="kpi-body">
                            <div class="kpi-value">@Model.TotalCourses</div>
                            <div class="kpi-label">Total Courses</div>
                            <div class="kpi-sub">Updated: <strong>@Model.GeneratedAtUtc.ToLocalTime().ToString("HH:mm")</strong></div>
                            <div class="kpi-accent"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Non-SuperAdmin Overview (keep simple) -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-light py-2">
                        <h6 class="mb-0">
                            <i class="fas fa-tachometer-alt me-2"></i>System Overview
                        </h6>
                    </div>
                    <div class="card-body py-3">
                        <div class="row text-center">
                            <div class="col-md-3 col-6">
                                <div class="summary-item">
                                    <div class="summary-number text-primary">@Model.TotalUsers</div>
                                    <div class="summary-label">Total Users</div>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="summary-item">
                                    <div class="summary-number text-success">@Model.ActiveStudents</div>
                                    <div class="summary-label">Active Students</div>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="summary-item">
                                    <div class="summary-number text-warning">@Model.ActiveTutors</div>
                                    <div class="summary-label">Active Teachers</div>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="summary-item">
                                    <div class="summary-number text-info">@Model.TotalCourses</div>
                                    <div class="summary-label">Total Courses</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (!isSuperAdmin)
    {
        <!-- Main Dashboard Modules -->
        <div class="row g-3">
            <!-- Users Management Module -->
            <div class="col-lg-4 col-md-6">
                <div class="card dashboard-module-compact h-100" onclick="location.href='@Url.Action("Index", "Users")'" style="cursor: pointer;">
                    <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #0066cc 0%, #004499 100%);">
                        <div class="module-icon-compact">
                            <i class="fas fa-users"></i>
                        </div>
                        <h4 class="card-title text-white mb-0" style="color: white !important;">Users Management</h4>
                    </div>
                    <div class="card-body text-center">
                        <div class="stats-row-compact">
                            <div class="stat-item-compact">
                                <div class="stat-label-compact">Total Users</div>
                                <div class="stat-value-compact">@Model.TotalUsers</div>
                            </div>
                            <div class="stat-item-compact">
                                <div class="stat-label-compact">Active Users</div>
                                <div class="stat-value-compact">@(Model.ActiveStudents + Model.ActiveTutors)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Courses Module -->
            <div class="col-lg-4 col-md-6">
                <div class="card dashboard-module-compact h-100" onclick="location.href='#'" style="cursor: pointer;">
                    <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #001a33 0%, #002d5a 100%);">
                        <div class="module-icon-compact">
                            <i class="fas fa-book"></i>
                        </div>
                        <h4 class="card-title text-white mb-0" style="color: white !important;">Courses</h4>
                    </div>
                    <div class="card-body text-center">
                        <div class="stats-row-compact">
                            <div class="stat-item-compact">
                                <div class="stat-label-compact">Total Courses</div>
                                <div class="stat-value-compact">0</div>
                            </div>
                            <div class="stat-item-compact">
                                <div class="stat-label-compact">Active Courses</div>
                                <div class="stat-value-compact">0</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reports Module -->
