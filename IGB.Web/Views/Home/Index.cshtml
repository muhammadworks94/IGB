                                                        <th class="text-end">New users</th>
                                                        <th class="text-end">Cumulative</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        var running = 0;
                                                        for (var i = 0; i < Model.UserGrowthLabels.Count; i++)
