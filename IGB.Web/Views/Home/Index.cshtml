@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        $(document).ready(function() {
            // Global Chart.js defaults to match UI
            Chart.defaults.font.family = 'Roboto, system-ui, -apple-system, Segoe UI, Arial, sans-serif';
            Chart.defaults.color = '#6c757d';
            Chart.defaults.animation.duration = 450;
            Chart.defaults.elements.line.capBezierPoints = true;

            const growthLabels = @Html.Raw(JsonSerializer.Serialize(Model.UserGrowthLabels));
            const growthCounts = @Html.Raw(JsonSerializer.Serialize(Model.UserGrowthCounts));
            const studentsCount = @Model.StudentsCount;
            const tutorsCount = @Model.TutorsCount;
            const adminsCount = @Model.AdminsCount;
            const totalUsers = @Model.TotalUsers;
            const activeUsersApprox = @(Model.ActiveStudents + Model.ActiveTutors);
            const inactiveUsersApprox = Math.max(totalUsers - activeUsersApprox, 0);

            const commonPlugins = {
                legend: {
                    display: true,
                    position: 'bottom',
                    labels: {
                        usePointStyle: true,
                        pointStyle: 'circle',
                        boxWidth: 8,
                        boxHeight: 8,
                        padding: 10,
                        color: '#6c757d',
                        font: { size: 11, weight: '600' }
                    }
                },
                tooltip: {
                    mode: 'index',
                    intersect: false
                }
            };

            const commonScales = {
                x: {
                    grid: { display: false },
                    ticks: { color: '#6c757d', font: { size: 11 }, maxRotation: 0, autoSkip: true }
                },
                y: {
                    beginAtZero: true,
                    grid: { color: 'rgba(0,0,0,0.06)' },
                    ticks: { color: '#6c757d', font: { size: 11 }, precision: 0 }
                }
            };

            // Growth chart (toggle line/bar)
            let growthChart = null;
            function renderGrowthChart(type) {
                const canvas = document.getElementById('userGrowthChart');
                if (!canvas) return;
                if (growthChart) growthChart.destroy();

                const isLine = type === 'line';
                growthChart = new Chart(canvas, {
                    type,
                    data: {
                        labels: growthLabels,
                        datasets: [{
                            label: 'New users',
                            data: growthCounts,
                            borderColor: '#14b8a6',
                            backgroundColor: isLine ? 'rgba(20, 184, 166, 0.14)' : 'rgba(20, 184, 166, 0.55)',
                            fill: isLine,
                            tension: isLine ? 0.35 : 0,
                            borderWidth: isLine ? 3 : 0,
                            borderRadius: type === 'bar' ? 8 : 0,
                            pointRadius: isLine ? 3 : 0,
                            pointHoverRadius: isLine ? 5 : 0,
                            pointBorderWidth: isLine ? 2 : 0,
                            pointBorderColor: '#ffffff',
                            pointBackgroundColor: '#14b8a6',
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: { mode: 'index', intersect: false },
                        plugins: { ...commonPlugins, legend: { ...commonPlugins.legend, position: 'top', align: 'end' } },
                        scales: commonScales
                    }
                });
            }

            function setGrowthToggleActive(type) {
                const isLine = type === 'line';
                $('#btnGrowthLine').toggleClass('active', isLine);
                $('#btnGrowthBar').toggleClass('active', !isLine);
            }

            $('#btnGrowthLine').on('click', function () { setGrowthToggleActive('line'); renderGrowthChart('line'); });
            $('#btnGrowthBar').on('click', function () { setGrowthToggleActive('bar'); renderGrowthChart('bar'); });
            setGrowthToggleActive('line');
            renderGrowthChart('line');

            // Role distribution (doughnut)
            const roleCanvas = document.getElementById('userRoleChart');
            if (roleCanvas) new Chart(roleCanvas, {
                type: 'doughnut',
                data: {
                    labels: ['Students', 'Teachers', 'Admins'],
                    datasets: [{
                        data: [studentsCount, tutorsCount, adminsCount],
                        backgroundColor: ['rgba(59, 130, 246, 0.85)', 'rgba(245, 158, 11, 0.85)', 'rgba(239, 68, 68, 0.85)'],
                        borderColor: ['rgba(59, 130, 246, 1)', 'rgba(245, 158, 11, 1)', 'rgba(239, 68, 68, 1)'],
                        borderWidth: 2,
                        hoverOffset: 6,
                        spacing: 2,
                        borderRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '65%',
                    plugins: { ...commonPlugins, tooltip: { callbacks: { label: (ctx) => `${ctx.label}: ${ctx.formattedValue}` } } }
                }
            });

            // Active vs inactive (approx) doughnut
            const activeCanvas = document.getElementById('userActiveChart');
            if (activeCanvas) new Chart(activeCanvas, {
                type: 'doughnut',
                data: {
                    labels: ['Active (approx.)', 'Inactive (approx.)'],
                    datasets: [{
                        data: [activeUsersApprox, inactiveUsersApprox],
                        backgroundColor: ['rgba(16, 185, 129, 0.85)', 'rgba(107, 114, 128, 0.55)'],
                        borderColor: ['rgba(16, 185, 129, 1)', 'rgba(107, 114, 128, 0.9)'],
                        borderWidth: 2,
                        hoverOffset: 6,
                        spacing: 2,
                        borderRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '65%',
                    plugins: { ...commonPlugins, tooltip: { callbacks: { label: (ctx) => `${ctx.label}: ${ctx.formattedValue}` } } }
                }
            });
        });
    </script>
}
