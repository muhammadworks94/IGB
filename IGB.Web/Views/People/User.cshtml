@model IGB.Web.ViewModels.People.UserProfileVm
@{
    ViewData["Title"] = "User Profile";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "User Profile",
    Icon: "fas fa-user",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index", "Portal")),
        new("Users", Url.Action("Index","Users")),
        new("Profile")
    }
))

<div class="container-fluid">
    <partial name="_PersonHeader" model="Model.Header" />

    <div class="row g-3">
        <div class="col-12 col-xl-8">
            <div class="card">
                <div class="card-body">
                    <h6 class="mb-2">Account</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-borderless mb-0">
                            <tbody>
                            <tr>
                                <td class="text-muted" style="width:180px;">Created</td>
                                <td class="fw-semibold">@Model.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm") (UTC)</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <hr class="my-3"/>

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">Assigned RBAC Roles</h6>
                        <span class="text-muted small">@Model.AssignedRbacRoles.Count</span>
                    </div>

                    @if (Model.AssignedRbacRoles.Count == 0)
                    {
                        <div class="text-muted">No custom RBAC roles assigned.</div>
                    }
                    else
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var r in Model.AssignedRbacRoles)
                            {
                                <span class="badge @(r.IsSystem ? "bg-primary" : "bg-secondary")">@r.Name</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="mb-2">Management</h6>
                    <div class="d-grid gap-2">
                        <a class="btn btn-outline-primary" href="@Url.Action("Details","Users", new { id = Model.Header.UserId })">
                            <i class="fas fa-id-card me-1"></i>Open Management Details
                        </a>
                        <a class="btn btn-outline-warning" href="@Url.Action("Edit","Users", new { id = Model.Header.UserId })">
                            <i class="fas fa-edit me-1"></i>Edit User
                        </a>
                        <a class="btn btn-outline-secondary" href="@Url.Action("Roles","Users", new { id = Model.Header.UserId })">
                            <i class="fas fa-user-tag me-1"></i>Assign Roles
                        </a>
                        <a class="btn btn-outline-secondary" href="@Url.Action("Index","Users")">
                            <i class="fas fa-arrow-left me-1"></i>Back to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


