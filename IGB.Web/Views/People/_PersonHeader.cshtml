@model IGB.Web.ViewModels.People.PersonHeaderVm

<div class="card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
            <div class="d-flex align-items-center gap-3">
                @{
                    var initials = (Model.FullName ?? "U").Split(' ', StringSplitOptions.RemoveEmptyEntries);
                    var init = initials.Length >= 2 ? $"{initials[0][0]}{initials[1][0]}" : initials[0][0].ToString();
                }
                <partial name="Components/_Avatar" model="@(new IGB.Web.ViewModels.Components.AvatarViewModel(ImageUrl: Model.ProfileImagePath, Initials: init, Alt: (Model.FullName ?? "User"), SizePx: 56))" />
                <div>
                    <div class="d-flex align-items-center gap-2 flex-wrap">
                        <h4 class="mb-0">@Model.FullName</h4>
                        <span class="badge bg-info">@Model.Role</span>
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">@(Model.IsActive ? "Active" : "Inactive")</span>
                        <span class="badge bg-light text-dark">Approval: @Model.ApprovalStatus</span>
                    </div>
                    <div class="text-muted small mt-1">
                        <span><i class="fas fa-envelope me-1"></i>@Model.Email</span>
                        @if (!string.IsNullOrWhiteSpace(Model.Phone))
                        {
                            <span class="ms-3"><i class="fas fa-phone me-1"></i>@Model.Phone</span>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.WhatsApp))
                        {
                            <span class="ms-3"><i class="fab fa-whatsapp me-1"></i>@Model.WhatsApp</span>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.TimeZoneId))
                        {
                            <span class="ms-3"><i class="fas fa-globe me-1"></i>@Model.TimeZoneId</span>
                        }
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary" href="javascript:history.back()"><i class="fas fa-arrow-left me-1"></i>Back</a>
            </div>
        </div>
    </div>
</div>


