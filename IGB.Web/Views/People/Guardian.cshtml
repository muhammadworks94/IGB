@model IGB.Web.ViewModels.People.GuardianProfileVm
@{
    ViewData["Title"] = "Guardian Profile";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Parent / Guardian Profile",
    Icon: "fas fa-user-shield",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index", "Portal")),
        new("Schedules", Url.Action("Overview","Schedule")),
        new("Guardian Profile")
    }
))

<div class="container-fluid">
    <partial name="_PersonHeader" model="Model.Header" />

    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">Wards</h6>
                <span class="text-muted small">@Model.Wards.Count</span>
            </div>
            @if (Model.Wards.Count == 0)
            {
                <div class="text-muted">No wards linked.</div>
            }
            else
            {
                <div class="accordion" id="wardsAcc">
                    @for (var i = 0; i < Model.Wards.Count; i++)
                    {
                        var w = Model.Wards[i];
                        var cid = "w" + w.StudentId;
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="h@(cid)">
                                <button class="accordion-button @(i==0 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#c@(cid)" aria-expanded="@(i==0 ? "true" : "false")" aria-controls="c@(cid)">
                                    @w.StudentName
                                </button>
                            </h2>
                            <div id="c@(cid)" class="accordion-collapse collapse @(i==0 ? "show" : "")" aria-labelledby="h@(cid)" data-bs-parent="#wardsAcc">
                                <div class="accordion-body">
                                    <div class="mb-2">
                                        <a class="btn btn-sm btn-outline-primary" href="/People/Student/@w.StudentId">Open student profile</a>
                                    </div>
                                    @if (w.Courses.Count == 0)
                                    {
                                        <div class="text-muted">No course enrollments found.</div>
                                    }
                                    else
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-sm table-hover align-middle">
                                                <thead>
                                                <tr>
                                                    <th>Course</th>
                                                    <th>Tutor</th>
                                                    <th>Status</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                @foreach (var c in w.Courses)
                                                {
                                                    <tr>
                                                        <td class="fw-semibold">@c.CourseName</td>
                                                        <td class="text-muted">@((c.TutorName ?? "-"))</td>
                                                        <td><span class="badge bg-light text-dark">@c.Status</span></td>
                                                    </tr>
                                                }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>


