@model IGB.Web.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IGB System - Register</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Roboto', sans-serif;
        }
        .card {
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,.2);
            overflow: hidden;
        }
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
            padding: 1.5rem 2rem;
            text-align: center;
        }
        .body {
            padding: 2rem;
            background: #fff;
        }
        .form-control { border-radius: 10px; }
    </style>
</head>
<body>
    <div class="container" style="max-width: 720px;">
        <div class="card">
            <div class="header">
                <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Create Account</h3>
                <small>Student registration (email confirmation + admin approval required)</small>
            </div>
            <div class="body">
                <form asp-action="Register" method="post">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="text-muted">Min 8 chars, upper, lower, number, special.</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Local Number</label>
                            <input asp-for="LocalNumber" class="form-control" placeholder="+971..." />
                            <span asp-validation-for="LocalNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">WhatsApp Number</label>
                            <input asp-for="WhatsappNumber" class="form-control" placeholder="+971..." />
                            <span asp-validation-for="WhatsappNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Country Code</label>
                            <input asp-for="CountryCode" class="form-control" placeholder="AE" />
                            <span asp-validation-for="CountryCode" class="text-danger"></span>
                        </div>
                        <div class="col-md-8">
                            <label class="form-label">Time Zone</label>
                            <input asp-for="TimeZoneId" class="form-control" placeholder="UTC" />
                            <span asp-validation-for="TimeZoneId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Login
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check me-2"></i>Register
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</body>
</html>


