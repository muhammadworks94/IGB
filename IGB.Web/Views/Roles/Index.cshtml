@model List<IGB.Domain.Entities.RbacRole>
@{
    ViewData["Title"] = "Roles";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Role Management",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Home", Url.Action("Index", "Home")),
        new("Roles")
    },
    Subtitle: "Create roles and assign permissions."
))

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <partial name="Components/_Alert" model="@(new IGB.Web.ViewModels.Components.AlertViewModel(TempData["Success"]!.ToString()!, Variant: "success", Dismissible: true))" />
    }
    @if (TempData["Error"] != null)
    {
        <partial name="Components/_Alert" model="@(new IGB.Web.ViewModels.Components.AlertViewModel(TempData["Error"]!.ToString()!, Variant: "danger", Dismissible: true))" />
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Edit" class="btn btn-primary"><i class="fas fa-plus me-2"></i>New Role</a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@r.Name</td>
                            <td>
                                <span class="badge @(r.IsSystem ? "bg-secondary" : "bg-primary")">@(r.IsSystem ? "System" : "Custom")</span>
                            </td>
                            <td class="text-muted">@r.Description</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form asp-action="Delete" asp-route-id="@r.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this role?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


