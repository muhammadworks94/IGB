@model IGB.Domain.Entities.CourseTopic
@{
    var course = (IGB.Domain.Entities.Course)ViewBag.Course;
    var parentTopicId = (long?)ViewBag.ParentTopicId;
    ViewData["Title"] = "Create Topic";
}

<div class="breadcrumb-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Index" asp-route-courseId="@course.Id">Topics</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>
    <h1 class="breadcrumb-title">Create @(parentTopicId.HasValue ? "Sub Topic" : "Main Topic")</h1>
</div>

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CourseId" />
                <input type="hidden" asp-for="ParentTopicId" />
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Sort Order</label>
                    <input asp-for="SortOrder" type="number" class="form-control" />
                </div>
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" asp-route-courseId="@course.Id" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }


