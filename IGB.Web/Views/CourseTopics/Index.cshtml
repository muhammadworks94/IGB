@model List<IGB.Domain.Entities.CourseTopic>
@{
    var course = (IGB.Domain.Entities.Course)ViewBag.Course;
    ViewData["Title"] = "Course Topics";
}

<div class="breadcrumb-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-controller="Curricula" asp-action="Index">Curricula</a></li>
            <li class="breadcrumb-item active" aria-current="page">Topics - @course.Name</li>
        </ol>
    </nav>
    <h1 class="breadcrumb-title">Topics - @course.Name</h1>
</div>

<div class="container-fluid">
    <div class="d-flex justify-content-end mb-3 gap-2">
        <a asp-action="Create" asp-route-courseId="@course.Id" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add Main Topic
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Sort</th>
                        <th class="text-end">Add Subtopic</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var t in Model.OrderBy(x => x.ParentTopicId.HasValue ? 1 : 0).ThenBy(x => x.SortOrder))
                    {
                        <tr>
                            <td>
                                @if (t.ParentTopicId.HasValue)
                                {
                                    <span class="text-muted">â†³</span>
                                }
                                @t.Title
                            </td>
                            <td>@(t.ParentTopicId.HasValue ? "Sub Topic" : "Main Topic")</td>
                            <td>@t.SortOrder</td>
                            <td class="text-end">
                                @if (!t.ParentTopicId.HasValue)
                                {
                                    <a asp-action="Create" asp-route-courseId="@course.Id" asp-route-parentTopicId="@t.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-plus me-1"></i>Subtopic
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


