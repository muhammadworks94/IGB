@model IGB.Shared.DTOs.PagedResult<IGB.Application.DTOs.UserDto>
@using IGB.Web.ViewModels.Components
@{
    ViewData["Title"] = "Users";
    var q = (ViewBag.Q as string) ?? "";
    var pager = new PaginationViewModel(
        Page: Model.PageNumber <= 0 ? 1 : Model.PageNumber,
        PageSize: Model.PageSize <= 0 ? 10 : Model.PageSize,
        TotalCount: Model.TotalCount,
        Action: "Index",
        Controller: "Users",
        RouteValues: new { q }
    );
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Users",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Dashboard", Url.Action("Index","Home")),
        new("Users")
    },
    Subtitle: "Manage all platform users (SuperAdmin).",
    Centered: true
))

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
                        <form method="get" class="d-flex align-items-center gap-2">
                            <label class="text-muted small mb-0" for="pageSizeSelect">Show</label>
                            <select id="pageSizeSelect" name="pageSize" class="form-select form-select-sm" style="width:110px" onchange="this.form.submit()">
                                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                <option value="25" selected="@(Model.PageSize == 25)">25</option>
                                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                                <option value="100" selected="@(Model.PageSize == 100)">100</option>
                            </select>
                            <span class="text-muted small">entries</span>
                            <input type="hidden" name="page" value="1" />
                            @if (!string.IsNullOrWhiteSpace(q))
                            {
                                <input type="hidden" name="q" value="@q" />
                            }
                        </form>

                        <div class="d-flex align-items-center gap-2">
                            <form method="get" class="d-flex align-items-center gap-2" role="search" aria-label="Search users">
                                <input type="hidden" name="pageSize" value="@(Model.PageSize <= 0 ? 10 : Model.PageSize)" />
                                <input type="hidden" name="page" value="1" />
                                <label class="text-muted small mb-0" for="q">Search:</label>
                                <input id="q" type="search" name="q" value="@q" class="form-control form-control-sm" style="width:260px" placeholder="Name / email / role" />
                                <button class="btn btn-sm btn-outline-primary" type="submit">Search</button>
                                @if (!string.IsNullOrWhiteSpace(q))
                                {
                                    <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Index","Users", new { page = 1, pageSize = (Model.PageSize <= 0 ? 10 : Model.PageSize) })">Clear</a>
                                }
                            </form>

                            <a asp-action="Create" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Add User
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="usersTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Items)
                            {
                                var profileUrl =
                                    user.Role == "Tutor" ? $"/People/Tutor/{user.Id}" :
                                    user.Role == "Student" ? $"/People/Student/{user.Id}" :
                                    user.Role == "Guardian" ? $"/People/Guardian/{user.Id}" :
                                    $"/People/User/{user.Id}";

                                <tr class="user-row" data-href="@profileUrl" style="cursor:pointer;">
                                    <td>@user.Id</td>
                                    <td>
                                        <a href="@profileUrl" class="text-decoration-none fw-semibold">
                                            @user.FullName
                                        </a>
                                    </td>
                                    <td>@user.Email</td>
                                    <td><span class="badge bg-info">@user.Role</span></td>
                                    <td>@(user.PhoneNumber ?? "-")</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>@user.CreatedAt.ToString("MM/dd/yyyy")</td>
                                    <td>
                                        <a href="@profileUrl" class="btn btn-sm btn-info" title="View Profile">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        </table>
                    </div>

                    <partial name="Components/_Pagination" model="pager" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Make whole row clickable (without breaking button clicks)
            $('#usersTable').on('click', 'tr.user-row', function(e) {
                if ($(e.target).closest('a,button,form,input,label,select,textarea').length) return;
                const href = $(this).data('href');
                if (href) window.location.href = href;
            });
        });
    </script>
}

