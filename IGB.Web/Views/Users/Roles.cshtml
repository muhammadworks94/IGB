@model IGB.Web.ViewModels.UsersUserRolesViewModel
@{
    ViewData["Title"] = "Assign Roles";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Assign Roles",
    Icon: "fas fa-user-tag",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Home", Url.Action("Index", "Home")),
        new("Users", Url.Action("Index", "Users")),
        new("Assign Roles")
    },
    Subtitle: $"User: {Model.Email}"
))

<div class="container-fluid">
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />

        <div class="card">
            <div class="card-body">
                <div class="row g-2">
                    @foreach (var r in Model.AllRoles)
                    {
                        var isChecked = Model.SelectedRoleIds.Contains(r.Id);
                        <div class="col-md-6">
                            <div class="form-check border rounded-3 p-3">
                                <input class="form-check-input" type="checkbox" name="SelectedRoleIds" value="@r.Id" checked="@(isChecked)" id="role_@r.Id" />
                                <label class="form-check-label" for="role_@r.Id">
                                    <div class="fw-semibold">@r.Name</div>
                                    <div class="text-muted small">@(r.IsSystem ? "System role" : "Custom role")</div>
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mt-3 d-flex justify-content-end gap-2">
            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>


