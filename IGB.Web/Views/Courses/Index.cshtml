@model List<IGB.Domain.Entities.Course>
@{
    var grade = (IGB.Domain.Entities.Grade)ViewBag.Grade;
    ViewData["Title"] = "Courses";
    
    var actionButtons = new List<PageHeaderActionButton>
    {
        new("Add Course", Url.Action("Create", "Courses", new { gradeId = grade.Id }), Icon: "fas fa-plus me-2", ButtonType: "primary")
    };
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: $"Courses - {grade.Name}",
    Icon: "fas fa-book",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Curricula", Url.Action("Index", "Curricula")),
        new("Grades", Url.Action("Index", "Grades", new { curriculumId = grade.CurriculumId })),
        new("Courses")
    },
    Subtitle: grade.Curriculum?.Name,
    ActionButtons: actionButtons
))

<div class="container-fluid">

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Credit Cost</th>
                        <th>Status</th>
                        <th class="text-end">Topics</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Name</td>
                            <td>@c.CreditCost</td>
                            <td>
                                <span class="badge @(c.IsActive ? "bg-success" : "bg-secondary")">@(c.IsActive ? "Active" : "Inactive")</span>
                            </td>
                            <td class="text-end">
                                <a asp-controller="CourseTopics" asp-action="Index" asp-route-courseId="@c.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-list me-1"></i>Topics
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


