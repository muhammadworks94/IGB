@model List<IGB.Domain.Entities.Course>
@{
    ViewData["Title"] = "Browse Courses";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel(
    Title: "Browse Courses",
    Breadcrumbs: new List<BreadcrumbItem>
    {
        new("Home", Url.Action("Index", "Home")),
        new("Browse Courses")
    },
    Subtitle: "Request booking for a course (Admin approval required)."
))

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                    <tr>
                        <th>Curriculum</th>
                        <th>Grade</th>
                        <th>Course</th>
                        <th>Credits</th>
                        <th class="text-end">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Grade?.Curriculum?.Name</td>
                            <td>@c.Grade?.Name</td>
                            <td>@c.Name</td>
                            <td>@c.CreditCost</td>
                            <td class="text-end">
                                <form asp-action="Book" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="courseId" value="@c.Id" />
                                    <button type="submit" class="btn btn-sm btn-primary">
                                        <i class="fas fa-calendar-plus me-1"></i>Book
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="CourseBookings" asp-action="My" class="btn btn-outline-secondary">
            <i class="fas fa-list me-2"></i>My Bookings
        </a>
    </div>
</div>


